<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.SettingsFragment">

<!--    <androidx.recyclerview.widget.RecyclerView-->
<!--    android:id="@+id/settingsRecycler"-->
<!--    android:layout_width="match_parent"-->
<!--    android:layout_height="wrap_content"-->
<!--    app:layout_constraintEnd_toEndOf="parent"-->
<!--    app:layout_constraintStart_toStartOf="parent"-->
<!--    app:layout_constraintTop_toTopOf="parent" />-->

    <TextView
        android:id="@+id/settingsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:textSize="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1" />

    <Button
        android:id="@+id/settingsAccountButton"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Account"
        android:textAlignment="viewStart"
        app:layout_constraintStart_toEndOf="@+id/settingsText"
        app:layout_constraintTop_toBottomOf="@+id/settingsText" />

    <Button
        android:id="@+id/settingsSubmitFeedbackButton"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Submit Feedback"
        android:textAlignment="viewStart"
        app:layout_constraintStart_toStartOf="@+id/settingsText"
        app:layout_constraintTop_toBottomOf="@+id/settingsAccountButton" />



    <Button
        android:id="@+id/settingsHelpButton"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Help"
        android:textAlignment="viewStart"
        app:layout_constraintStart_toStartOf="@+id/settingsText"
        app:layout_constraintTop_toBottomOf="@+id/settingsSubmitFeedbackButton" />

    <Button
        android:id="@+id/logoutButton"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Logout"
        android:textAlignment="viewStart"
        app:layout_constraintStart_toStartOf="@+id/settingsText"
        app:layout_constraintTop_toBottomOf="@+id/settingsHelpButton" />

</androidx.constraintlayout.widget.ConstraintLayout>